{
	"name": "4diacloud-editor",
	"displayName": "4diacloud-editor",
	"description": "A new experimental fronted for the 4diac ide",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.60.0"
	},
	"license": "EPL-2.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/lukaswais-dev/4diacloud-editor"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:4diac.start"
	],
	"main": "./src/extension.ts",
	"contributes": {
		"commands":[
			{
				"command": "4diac.start",
				"title": "Start 4diac ide",
				"category": "4diac"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "yarn run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"test-compile": "tsc -p ./",
		"test-watch": "tsc -watch -p ./",
		"pretest": "yarn run test-compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.61.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"eslint": "^7.27.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2",
		"ts-loader": "^9.2.2",
		"webpack": "^5.38.1",
		"webpack-cli": "^4.7.0"
	}
}